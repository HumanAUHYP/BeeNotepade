@using CoreLibrary;
@model List<Beehive>

<h2>Пасека</h2>
<div class="row justify-content-end">
    <a class="btn btn-primary mr-1" asp-controller="Paseka"
       asp-action="Add" role="button">Добавить улей</a>
    <a class="btn btn-primary mr-1" asp-controller="Paseka"
       asp-action="ChoiceBeehive" role="button">Создать отводок</a>
    <a class="btn btn-danger" asp-controller="Paseka"
       asp-action="LogOut" role="button">Выйти</a>
</div>
<br>

<div class="row">
    @foreach (var beehive in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card text-center h-100">
                <div class="card-header bg-transparent border-0">
                    <h2 class="card-title text-center">
                        <a>@beehive.Name</a>
                    </h2>
                    <p class="font-weight-normal">@beehive.Description</p>
                </div>
                <div class="card-body">
                    <img class="card-img-top" src="@beehive.Image" />
                </div>
                <div class="card-footer">
                    <p class="font-weight-normal">Дней до проверки @beehive.DaysForCheck</p>
                    <a class="btn btn-danger" asp-controller="Paseka"
                       asp-action="Remove" asp-route-id="@beehive.Id"
                       role="button">
                        Удалить
                    </a>
                    <a class="btn btn-primary" asp-controller="Paseka"
                       asp-action="Change" asp-route-id="@beehive.Id"
                       role="button">
                        Изменить
                    </a>
                </div>
            </div>
        </div>
    }
</div>